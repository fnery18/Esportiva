<div class="modal fade" id="modal-jogador" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="titulo-padrao">
                    Novo Jogador
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </h5>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtCodigoJogador" value="" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <div class="form-group">
                                <i class="fa fa-user"></i>
                                <label>Nome: </label>
                                <input type="text" id="txtNome" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <i class="fa fa-flag-o"></i>
                                <label>Sobrenome: </label>
                                <input type="text" id="txtSobrenome" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <div class="form-group">
                                <i class="fa fa-calendar"></i>
                                <label>Data de Nascimento: </label>
                                <input type="date" id="txtNascimento" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <i class="fa fa-hashtag"></i>
                                <label>Posicao: </label>
                                <input type="text" id="txtPosicao" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-4">
                            <div class="form-group">
                                <i class="fa fa-futbol"></i>
                                <label>Nº da camisa: </label>
                                <input type="number" id="txtCamisa" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <i class="fa fa-star"></i>
                                <label>Apelido: </label>
                                <input type="text" id="txtApelido" class="form-control" />
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <i class="fa fa-sort"></i>
                                <label>Altura: </label>
                                <input type="text" id="txtAltura" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-padrao" id="btn-salvar-jogador">Criar</button>
            </div>
        </div>
    </div>
</div>

