@model List<Esportiva.Models.TimeModel>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Nacionalidade</th>
            <th>Data de Fundação</th>
            <th>Opção</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var time in Model)
            {
                <tr>
                    <td>@time.Nome</td>
                    <td>@time.Sigla</td>
                    <td>@time.Nacionalidade</td>
                    <td>@time.DataFundacao.ToShortDateString()</td>
                    <td>
                        <a data-toggle="tooltip" data-original-title="Excluir" data-placement="top" class="habilita-tooltip" 
                           data-opcao="excluir-adversario" data-id="@time.Id">
                            <i class="fa fa-trash lixeira"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">
                    Nenhum time encontrado.
                </td>
            </tr>
        }

    </tbody>
    
</table>
