<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - E-Sportiva</title>
    @RenderSection("styles")
    <link href="~/Content/css/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/fontawesome-all.min.css" rel="stylesheet" />
    <script src="~/Scripts/util/alert.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @*@Html.ActionLink("ESPORTIVA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <img src="~/Content/images/Logo.jpg" class="logo-menu" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown @(ViewContext.RouteData.Values["Action"].ToString().ToLower().Contains("Produto") ? "ativo" : "")">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Produtos <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="~/Produto/Cadastrar">Gestão Futebolística</a></li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Preços", "Index", "Home")</li>

                    @if (Session["user"] != null)
                    {
                        <li><a class="saudacao">Olá @Session["user"]</a></li>
                        <li>@Html.ActionLink("Times", "Time", "Administrativo")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Autenticacao")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Autenticacao")</li>
                    }
                   

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <br /><br />    
        <div id="alert-helper" style="z-index: 99999999;"></div>
        @RenderBody()
        <hr />
        <footer>
            
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts")
</body>
</html>